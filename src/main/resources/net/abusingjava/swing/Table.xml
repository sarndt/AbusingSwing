<window width="600" height="400">
	<panel>
		
		<binding name="table-binding" table="table">
			<property name="name">Crame</property>
			<property name="numberProperty">Crumber</property>
		</binding>

		<binding name="binding">
			<property name="name">field1</property>
			<property name="numberProperty">field2</property>
			<property name="boolean">checkmate</property>
		</binding>

		<vbox>
			<hbox>
				<textfield name="field1" />
				<textfield name="field2" />
				<checkbox name="checkmate" />
			</hbox>
			<table editable="true" name="table">
				<col type="string">Crame</col>
				<col type="int">Crumber</col>
			</table>
		</vbox>
	</panel>
</window>